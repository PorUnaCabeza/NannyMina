page {
  background-color: #f1f1f1;
}
.suggestion-container .label {
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}
.suggestion-container .text-area {
  background-color: #fff;
  width: 100%;
  padding: 20rpx;
  color: #808080;
  font-size: 28rpx;
}
.suggestion-container .text-area .textarea-placeholder {
  color: #d7d7d7;
  font-size: 24rpx;
}
.suggestion-container .sugt-input {
  background-color: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  color: #808080;
}
.suggestion-container .sugt-input .input-placeholder {
  color: #d7d7d7;
  font-size: 24rpx;
}
.suggestion-container .confirm {
  position: fixed;
  left: 0;
  right: 0;
  width: 100%;
  bottom: 0;
  background-color: #f4817c;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #f7adaa;
  font-size: 32rpx;
}
.suggestion-container .confirm.active {
  color: #fff;
}
