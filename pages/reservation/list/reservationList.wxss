.reservation-list .reservation-item {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  justify-content: flex-start;
}
.reservation-list .reservation-item .head-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  margin-left: 20rpx;
}
.reservation-list .reservation-item .right-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}
.reservation-list .reservation-item .right-content .name-line {
  display: flex;
  justify-content: flex-start;
}
.reservation-list .reservation-item .right-content .name-line .name {
  font-size: 32rpx;
  color: #000000;
  font-weight: bold;
}
.reservation-list .reservation-item .right-content .name-line .type {
  font-size: 28rpx;
  color: #434343;
}
.reservation-list .reservation-item .right-content .name-line .state {
  font-size: 28rpx;
  color: #f4817c;
  float: right;
}
.reservation-list .reservation-item .right-content .price {
  font-size: 28rpx;
  color: #eb4429;
}
.reservation-list .reservation-item .right-content .time {
  font-size: 28rpx;
  color: #434343;
}
.reservation-list .reservation-item .right-content .operate-line {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.reservation-list .reservation-item .right-content .operate-line .button {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #434343;
  border: 1rpx solid #cecece;
}
