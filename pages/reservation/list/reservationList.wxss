.reservation-list .reservation-item {
  margin-top: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.reservation-list .reservation-item .content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.reservation-list .reservation-item .head-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  margin-left: 20rpx;
}
.reservation-list .reservation-item .right-content {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
  width: 570rpx;
}
.reservation-list .reservation-item .right-content .name-line {
  display: flex;
  justify-content: flex-start;
}
.reservation-list .reservation-item .right-content .name-line .name {
  font-size: 32rpx;
  color: #000000;
  font-weight: bold;
}
.reservation-list .reservation-item .right-content .name-line .type {
  font-size: 28rpx;
  color: #434343;
}
.reservation-list .reservation-item .right-content .name-line .state {
  font-size: 28rpx;
  color: #f4817c;
  position: absolute;
  right: 20rpx;
}
.reservation-list .reservation-item .right-content .price {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #eb4429;
}
.reservation-list .reservation-item .right-content .time {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #434343;
}
.reservation-list .reservation-item .operate-line {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.reservation-list .reservation-item .operate-line .button {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #434343;
  border: 1rpx solid #cecece;
  margin-right: 20rpx;
  text-align: center;
  border-radius: 4rpx;
}
.blank {
  height: 100rpx;
}
